      crossorigin="anonymous"></script>
    <script src="javascripts/poids.js"></script>
 
    

    <script>
    //Mettre à jour le poids tout les 150 Milliseconde
     var setinterval = setInterval(getmessage, 150);
    getmessage()
    function getmessage() {
     $.ajax({
     url: "/balance",
     method: "GET"
     }).done(function (data) { 
       //affiche la valeur dans la page modal.
        $("#val").html(data);
     }) 
      }
    </script>

</body>

</html>